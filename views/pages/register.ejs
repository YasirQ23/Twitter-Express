<%- include('../partials/header.ejs') %>
    <div id="authformcont" class="container">
        <h1>Register</h1>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="email" class="form-control" id="exampleInputUsername1" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">This is how your name will be displayed on the
                    site.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input type="password" class="form-control" id="exampleInputConfirmPassword1">
            </div>
            <a id="loginredirects" class="nav-link" href="/">Already have an account? Login here.</a>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>