<%- include('../partials/unloggedheader.ejs') %>
    <div id="authformcont" class="container">
        <h1>Login</h1>
        <form method="POST" action="/auth/login" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-control">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control">
            </div>
            <div class="form-group">
                <a href="/auth/register"><small>Don't have an account? Register here.</small></a>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    <%- include('../partials/footer.ejs') %>